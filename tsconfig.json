{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "resolveJsonModule": true,
    "lib": ["DOM"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    // Base starts here -----------------
    "baseUrl": "./",
    "paths": {
      "@apps/*": ["apps/*"],
      "@globalTypes": ["libs/common/types/index.d.ts"],
      "@utils/*": ["libs/common/utils/*"],
      "@/*": ["*"]
    }
  },
  "include": ["./apps/**/*", "./libs/**/*"]
}
