{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "resolveJsonModule": true,
    "lib": ["DOM"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    // Base starts here -----------------
    "baseUrl": "./",
    "paths": {
      "@apps/*": ["apps/*"],
      "@ui/*": ["libs/common/ui/*"],
      "@utils/*": ["libs/common/utils/*"],
      "@common/*": ["libs/common/*"]
    }
  },
  "include": ["./apps/**/*", "./libs/**/*"]
}
